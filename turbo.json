{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "generate": {
      "dependsOn": ["^build"],
      "inputs": ["scripts/generate-themes.ts"],
      "outputs": ["src/tokens/_color-sets.scss", "src/tokens/_colors.scss"]
    },
    "build": {
      "dependsOn": ["^build", "generate"],
      "inputs": ["src/**"],
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": [],
      "cache": false
    }
  }
}
