{
  "name": "@woosgem/monorepo",
  "version": "1.0.0",
  "author": "woosgem",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "pnpm --filter @woosgem/ds-test test:log",
    "test:watch": "pnpm --filter @woosgem/ds-test test:watch",
    "test:coverage": "pnpm --filter @woosgem/ds-test test --coverage",
    "test:react": "pnpm --filter @woosgem/ds-test test --project react",
    "test:vue": "pnpm --filter @woosgem/ds-test test --project vue",
    "test:all": "pnpm --filter @woosgem/ds-test test",
    "test:dashboard": "pnpm --filter @woosgem/ds-test test --coverage && node scripts/generate-dashboard.js",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.28.2"
}
