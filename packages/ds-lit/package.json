{
  "name": "@woosgem-dev/lit",
  "version": "0.1.0",
  "description": "WooSGem Design System - Lit Web Components",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@woosgem-dev/core": "workspace:*",
    "@woosgem-dev/headless": "workspace:*",
    "lit": "^3.2.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "@woosgem-dev/styles": "workspace:*"
  },
  "keywords": [
    "design-system",
    "web-components",
    "lit",
    "woosgem"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
